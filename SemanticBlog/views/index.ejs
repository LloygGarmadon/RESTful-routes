<% include partials/header.ejs %>

<div class="ui main text container">
    <div class="ui huge header">Caleb Pickens' RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% for(var i = 0; i < blogs.length; i++){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blogs[i].image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blogs[i]._id %>"><%= blogs[i].title %></a>
                        <div class="meta">
                            <span><%= blogs[i].created %></span>
                        </div>
                        <div class="description">
                            <p><%- blogs[i].body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated violet button" href="/blogs/<%= blogs[i]._id %>">
                                Read More &nbsp; <i class="fas fa-chevron-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>

